<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:orientation="horizontal" >


    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item"
        android:background="@drawable/background_card"


        >
        <TextView
            android:id="@+id/title1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/belgrano"
            android:textSize="20dp"
            android:textColor="#06CCF8"
            android:textColorLink="@color/colorAccent"
            android:autoLink="web"
            android:linksClickable="true"

            />

        <LinearLayout
            android:id="@+id/title"
            android:layout_below="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/noun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:textColor="@color/bbb"
                android:fontFamily="@font/belgrano"
                android:background="@drawable/border_allside"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="NOUN form">

            </TextView>
            <TextView
                android:id="@+id/verb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:fontFamily="@font/belgrano"
                android:textColor="@color/bbb"
                android:background="@drawable/border_allside"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="VERB form">

            </TextView>
            <TextView
                android:id="@+id/adjective"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:fontFamily="@font/belgrano"
                android:gravity="center"
                android:textColor="@color/bbb"
                android:background="@drawable/border_allside"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="ADJECTIVE form">

            </TextView>
            <TextView
                android:id="@+id/adverb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:fontFamily="@font/belgrano"
                android:background="@drawable/border_allside"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="12dp"
                android:padding="@dimen/activity_horizontal_margin"
                android:textColor="@color/bbb"
                android:gravity="center"
                android:text="ADVERB form">

            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"

            android:text="Medium Text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="12dp"
            android:fontFamily="@font/kalpurush"
            android:textColor="@color/soft_dark"
            android:textStyle="bold"

            />
    </RelativeLayout>
</RelativeLayout>